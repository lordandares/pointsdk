{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": false,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "dist/js",
        "strict": true,
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots" : ["node_modules/@types", "node_modules/web-ext-types", "src/types"]
    }
}
