{
    "manifest_version": 2,
    "name": "Point Network",
    "description": "A Browser Extension for Point Network",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon-16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/backgroundPage.js"],
        "persistent": false
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "64": "icon-88.png",
        "128": "icon-128.png"
    },
    "permissions": ["tabs", "activeTab", "notifications", "http://*/", "https://*/"],
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": [
            "js/inject.js",
            "js/script.js"
          ],
          "all_frames": true
        }
    ]
}
